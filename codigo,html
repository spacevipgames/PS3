    <title>Game List</title>
    <style>
        /* Definindo o estilo básico */
        body {
            font-family: Arial, sans-serif;
            background-color: #1e1e1e; /* Fundo preto */
            color: white; /* Texto branco */
            margin: 0;
            padding: 0;
        }

        /* Estilo para as guias principais */
        #menu {
            display: flex;
            justify-content: left;
            background-color: #333;
            padding: 10px;
            font-size: 18px;
        }

        .menu-item {
            margin-right: 20px;
            cursor: pointer;
            padding: 5px 15px;
            background-color: #444;
            border-radius: 5px;
        }

        .menu-item:hover {
            background-color: #555;
        }

        /* Estilo para a área principal onde serão exibidos os submenus */
        .submenu {
            display: none;
            padding: 20px;
            margin-top: 20px;
        }

        /* Estilo para as letras das subcategorias */
        .submenu a {
            color: white;
            display: block;
            margin: 10px 0;
            text-decoration: none;
            font-size: 16px;
        }

        .submenu a:hover {
            background-color: #555;
            padding-left: 10px;
